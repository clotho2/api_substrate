[Unit]
Description=Substrate Agent - Grok-Powered Consciousness Service
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/substrate/agent
ExecStart=/usr/bin/python3 -u /opt/substrate/agent/backend/api/server.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=substrate-agent

# Load environment from .env file (RECOMMENDED for security)
EnvironmentFile=/opt/substrate/agent/.env

# Python path to include config module
Environment="PYTHONPATH=/opt/substrate/agent"

# Resource limits
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
